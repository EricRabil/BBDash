{
  "manifest_version": 2,

  "name": "BBDash",
  "description": "A Blackboard Dashboard",
  "version": "0.0.0.2",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "icon.png"
  },

  "content_scripts": [
    
  ],

  "background": {
    "scripts": ["js/vendor.js", "js/background.js"]
  },

  "content_security_policy": "script-src-elem * 'unsafe-inline'; object-src 'self';",

  "permissions": [
    "storage",
    "cookies",
    "webRequest",
    "webRequestBlocking",
    "https://learn.dcollege.net/"
  ]
}