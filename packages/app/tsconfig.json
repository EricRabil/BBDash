{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "@styles/*": [
        "scss/*"
      ],
      "@contexts/*": [
        "contexts/*"
      ],
      "@transformers/*": [
        "transformers/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@reducers/*": [
        "store/reducers/*"
      ],
      "@store/*": [
        "store/*"
      ],
      "@components/*": [
        "components/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}
